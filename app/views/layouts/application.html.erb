<!DOCTYPE html>
<html>
  <head>
    <title>BeBetter</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all' %>
    <%= javascript_include_tag 'application' %>
  </head>

  <body>
    <div>
      <% flash.each do |name, msg| %>
        <div>
          <%= content_tag :div, msg, :id => "flash_#{name}" if msg.is_a?(String) %>
        </div>
      <% end %>
    </div>
    
    <%= yield %>
  </body>
</html>
